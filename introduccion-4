public class Ejercicio {
    public static void main(String[] args) {
        int numeroIf = 1;
        if (numeroIf > 0) {
            System.out.println(numeroIf + " es un número positivo");
        } else if (numeroIf < 0) {
            System.out.println(numeroIf + " es un número negativo");
        } else {
            System.out.println(numeroIf + " es 0");
        }
        
        int numeroWhile = 0;
        while (numeroWhile < 3) {
            numeroWhile++;
            System.out.println("Valor de numeroWhile en el bucle while: " + numeroWhile);
        }
        
        int numeroDoWhile = 0;
        do {
            numeroDoWhile++;
            System.out.println("Valor de numeroDoWhile en el bucle do while: " + numeroDoWhile);
        } while (numeroDoWhile < 3);
        
        for (int numeroFor = 0; numeroFor <= 3; numeroFor++) {
            System.out.println("Valor de numeroFor en el bucle for: " + numeroFor);
        }
        
        String estacion = "verano";
        switch (estacion) {
            case "primavera":
                System.out.println("Estamos en primavera");
                break;
            case "verano":
                System.out.println("Estamos en verano");
                break;
            case "otoño":
                System.out.println("Estamos en otoño");
                break;
            case "invierno":
                System.out.println("Estamos en invierno");
                break;
            default:
                System.out.println("La estación especificada no es válida");
        }
    }
}
